---
import { createMarkdownProcessor } from '@astrojs/markdown-remark';
const { content } = Astro.props;

const process = await createMarkdownProcessor({});

const { code } = await process.render(content);
---

<div class="markdown">
  <Fragment set:html={code} />
</div>

<style>
  /* Base markdown container styles for light background */
  .markdown {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    padding: 1em;
    border-radius: 5px;
  }

  /* Headings */
  :global(.markdown h1),
  :global(.markdown h2),
  :global(.markdown h3),
  :global(.markdown h4),
  :global(.markdown h5),
  :global(.markdown h6) {
    font-weight: bold;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  :global(.markdown h2) {
    border-bottom: 1px solid rgb(114, 113, 113);
    font-size: 24px;
  }
  :global(.markdown hr) {
    background: transparent;
    background-color: #7271714d;
    border: 0;
    box-sizing: content-box;
    height: 0.25em;
    margin: 24px 0;
    overflow: hidden;
    padding: 0;
  }

  /* Paragraphs */
  :global(.markdown p) {
    margin: 0.5em 0;
  }

  /* Links */
  :global(.markdown a) {
    text-decoration: none;
    max-width: 100%; /* Ensures it doesnâ€™t exceed container width */
    display: inline-block;
  }

  :global(.markdown a:hover) {
    text-decoration: underline; /* Underline links on hover */
  }

  /* Lists */
  :global(.markdown ul),
  :global(.markdown ol) {
    padding-left: 1.5em;
    margin: 0.5em 0;
  }

  :global(.markdown li) {
    margin: 0.3em 0;
  }

  /* Blockquotes */
  :global(.markdown blockquote) {
    margin: 1em 0;
    padding-left: 1em;
    border-left: 4px solid #cbd5e0; /* Light border for blockquote */
    font-style: italic;
    background-color: #f7fafc; /* Light gray background for blockquote */
  }

  /* Code blocks */
  :global(.markdown pre) {
    background-color: transparent !important; /* Light gray for code block */
    padding: 1em;
    border-radius: 5px;
    overflow: auto;
    color: #2d3748; /* Dark text color for code */
    border: 1px solid rgb(114, 113, 113);
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  }

  :global(.markdown code) {
    background-color: transparent !important;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: monospace;
  }

  /* Tables */
  :global(.markdown table) {
    display: block; /* Allows table to overflow and scroll */
    width: max-content; /* Table grows to fit content width */
    max-width: 100%; /* Prevents table from exceeding the container width */
    overflow-x: auto; /* Enables horizontal scrolling */
    border-collapse: collapse;
    border-spacing: 0;
    margin-bottom: 1rem;
  }

  :global(.markdown th),
  :global(.markdown td) {
    padding: 0.6em;
    border: 1px solid rgb(114, 113, 113); /* Light border for table cells */
    text-align: left;
  }

  :global(.markdown th) {
    font-weight: bold;
  }

  /* Images */
  :global(.markdown img) {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
  }
</style>
